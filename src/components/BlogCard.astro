---
interface Props {
  post: {
    id: string;
    title: string;
    slug: string;
    excerpt: string;
    coverImage?: string | null;
    date: string;
    category: string;
    tags: string[];
    readTime: string;
  };
}

const { post } = Astro.props;

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<article class="blog-card">
  <a href={`/blog/${post.slug}`} class="card-link">
    {post.coverImage ? (
      <div class="card-image-container">
        <img
          src={post.coverImage}
          alt={post.title}
          class="card-image"
          loading="lazy"
        />
        <div class="card-image-overlay"></div>
      </div>
    ) : (
      <div class="card-image-placeholder">
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
      </div>
    )}
  </a>

  <div class="card-content">
    <div class="card-meta">
      <span class="category-badge">{post.category}</span>
    </div>

    <a href={`/blog/${post.slug}`} class="card-title-link">
      <h3 class="card-title">{post.title}</h3>
    </a>

    <p class="card-excerpt">{post.excerpt}</p>

    <div class="card-footer">
      <div class="card-meta-info">
        <span class="read-time">{post.readTime}</span>
        <span class="separator">â€¢</span>
        <time class="card-date" datetime={post.date}>
          {formatDate(post.date)}
        </time>
      </div>

      {post.tags.length > 0 && (
        <div class="card-tags">
          {post.tags.slice(0, 3).map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </div>
  </div>

  <div class="card-border"></div>
</article>

<style>
  .blog-card {
    position: relative;
    border: 1px solid hsl(var(--border) / 0.5);
    border-radius: 1rem;
    overflow: hidden;
    background: hsl(var(--card));
    transition: all 0.5s ease;
  }

  .blog-card:hover {
    box-shadow: 0 25px 50px -12px hsl(var(--primary) / 0.1);
    transform: translateY(-0.5rem);
  }

  .card-border {
    position: absolute;
    inset: 0;
    border: 2px solid hsl(var(--primary) / 0);
    border-radius: 1rem;
    pointer-events: none;
    transition: border-color 0.5s ease;
  }

  .blog-card:hover .card-border {
    border-color: hsl(var(--primary) / 0.2);
  }

  .card-link {
    display: block;
    text-decoration: none;
  }

  .card-image-container {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: hsl(var(--muted));
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .blog-card:hover .card-image {
    transform: scale(1.1);
  }

  .card-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      hsl(var(--background) / 0.8) 0%,
      transparent 50%
    );
    opacity: 0.6;
    transition: opacity 0.5s ease;
  }

  .blog-card:hover .card-image-overlay {
    opacity: 0.4;
  }

  .card-image-placeholder {
    aspect-ratio: 16 / 9;
    background: linear-gradient(
      to bottom right,
      hsl(var(--muted)),
      hsl(var(--muted) / 0.5)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.5s ease;
  }

  .card-image-placeholder svg {
    width: 4rem;
    height: 4rem;
    color: hsl(var(--muted-foreground) / 0.4);
    transition: color 0.3s ease;
  }

  .blog-card:hover .card-image-placeholder {
    transform: scale(1.05);
  }

  .blog-card:hover .card-image-placeholder svg {
    color: hsl(var(--muted-foreground) / 0.6);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-meta {
    margin-bottom: 0.75rem;
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid hsl(var(--primary) / 0.2);
  }

  .card-title-link {
    text-decoration: none;
    display: block;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: hsl(var(--card-foreground));
    transition: color 0.3s ease;
  }

  .blog-card:hover .card-title {
    color: hsl(var(--primary));
  }

  .card-excerpt {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    padding-top: 1rem;
    border-top: 1px solid hsl(var(--border) / 0.5);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .card-meta-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
  }

  .read-time {
    font-weight: 500;
  }

  .separator {
    color: hsl(var(--border));
  }

  .card-date {
    font-weight: 400;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.625rem;
    border-radius: 0.375rem;
    background: hsl(var(--muted) / 0.5);
    color: hsl(var(--muted-foreground));
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: default;
  }

  .tag:hover {
    background: hsl(var(--muted));
    color: hsl(var(--foreground));
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .card-content {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.125rem;
    }

    .card-excerpt {
      font-size: 0.8125rem;
    }
  }
</style>
