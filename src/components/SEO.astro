---
/**
 * SEO Component - 统一管理所有 SEO 相关的 meta 标签
 *
 * @param title - 页面标题
 * @param description - 页面描述
 * @param image - 社交分享图片（可选）
 * @param type - 页面类型 (website, article)
 * @param publishedTime - 发布时间（用于 article）
 * @param modifiedTime - 修改时间（用于 article）
 * @param tags - 文章标签（用于 article）
 */
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
}

const {
  title = 'Astro Blog',
  description = 'A modern blog built with Astro',
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  tags = [],
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = 'Astro Blog';

// 默认社交图片
const defaultImage = '/og-image.png';
const socialImage = image || new URL(defaultImage, Astro.site).href;

// 文章类型时的额外标签
const isArticle = type === 'article';
---

<!-- Basic Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImage} />
<meta property="og:site_name" content={siteName} />
{isArticle && publishedTime && <meta property="article:published_time" content={publishedTime} />}
{isArticle && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{isArticle && tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={socialImage} />

<!-- Page Title -->
<title>{title}</title>
