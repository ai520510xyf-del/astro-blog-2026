---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Fragment } from 'astro/jsx-runtime';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get all posts for navigation
const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.data.date);
  const dateB = new Date(b.data.date);
  return dateA.getTime() - dateB.getTime();
});

// Find current post index
const currentIndex = sortedPosts.findIndex(p => p.id === post.id);
const previousPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<Layout
  title={post.data.title}
  description={post.data.description}
>
  <article class="bg-gradient-to-b from-primary-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl">
        <!-- Back to posts link -->
        <a
          href="/blog"
          class="inline-flex items-center text-primary-600 hover:text-primary-700 transition-colors py-8 font-medium"
        >
          <svg class="mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M15.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L11.414 10H17a1 1 0 110 2h-5.586l4.293 4.293a1 1 0 010 1.414z"
              clip-rule="evenodd"
            />
          </svg>
          Back to all posts
        </a>

        <!-- Article Header -->
        <header class="mb-12 pb-12 border-b border-gray-200">
          <!-- Meta information -->
          <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-600 mb-6">
            <time datetime={post.data.date} class="font-medium">
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {post.data.readingTime && (
              <Fragment>
                <span>Â·</span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {post.data.readingTime} min read
                </span>
              </Fragment>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-6 leading-tight">
            {post.data.title}
          </h1>

          <!-- Description -->
          {post.data.description && (
            <p class="text-xl text-gray-600 leading-relaxed mb-6">
              {post.data.description}
            </p>
          )}

          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <a
                  href={`/blog/?tag=${encodeURIComponent(tag)}`}
                  class="inline-flex items-center rounded-full bg-primary-50 px-4 py-2 text-sm font-medium text-primary-700 hover:bg-primary-100 transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
        </header>

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>

        <!-- Article Footer -->
        <footer class="mt-16 pt-8 border-t border-gray-200">
          <!-- Share section -->
          <div class="mb-12">
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
              Share this article
            </h3>
            <div class="flex gap-3">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                </svg>
                Twitter
              </a>
              <a
                href={`https://github.com/${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                GitHub
              </a>
            </div>
          </div>

          <!-- Navigation -->
          {(previousPost || nextPost) && (
            <nav className="border-t border-gray-200 pt-8" aria-label="Previous/Next posts">
              <h3 className="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-6">
                More articles
              </h3>
              <div className="grid gap-6 sm:grid-cols-2">
                {previousPost && (
                  <a
                    href={`/blog/${previousPost.slug}`}
                    className="group flex flex-col p-6 border border-gray-200 rounded-lg hover:border-primary-300 hover:shadow-md transition-all"
                  >
                    <div className="flex items-center gap-2 text-sm text-gray-600 mb-2">
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                      </svg>
                      <span className="font-medium">Previous</span>
                    </div>
                    <h4 className="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors line-clamp-2">
                      {previousPost.data.title}
                    </h4>
                    <p className="mt-2 text-sm text-gray-600 line-clamp-2">
                      {previousPost.data.description}
                    </p>
                  </a>
                )}

                {nextPost && (
                  <a
                    href={`/blog/${nextPost.slug}`}
                    className="group flex flex-col p-6 border border-gray-200 rounded-lg hover:border-primary-300 hover:shadow-md transition-all sm:ml-auto"
                  >
                    <div className="flex items-center justify-end gap-2 text-sm text-gray-600 mb-2">
                      <span className="font-medium">Next</span>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                    <h4 className="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors line-clamp-2 text-right">
                      {nextPost.data.title}
                    </h4>
                    <p className="mt-2 text-sm text-gray-600 line-clamp-2 text-right">
                      {nextPost.data.description}
                    </p>
                  </a>
                )}
              </div>
            </nav>
          )}
        </footer>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Enhanced prose styles for better readability */
  .prose {
    --tw-prose-body: theme('colors.gray.700');
    --tw-prose-headings: theme('colors.gray.900');
    --tw-prose-links: theme('colors.primary.600');
    --tw-prose-bold: theme('colors.gray.900');
    --tw-prose-code: theme('colors.primary.600');
    --tw-prose-pre-code: theme('colors.gray.200');
    --tw-prose-pre-bg: theme('colors.gray.900');
    --tw-prose-quotes: theme('colors.gray.600');
    --tw-prose-quote-borders: theme('colors.primary.200');
  }

  .prose :where(a):hover {
    color: theme('colors.primary.700');
  }

  /* Headings */
  .prose :where(h2, h3, h4):not(:where([class~='not-prose'] *)) {
    scroll-margin-top: 6rem;
  }

  .prose h2 {
    margin-top: 2.5em;
    margin-bottom: 1em;
    padding-bottom: 0.5rem;
    font-size: 2rem;
    font-weight: 700;
    border-bottom: 1px solid theme('colors.gray.200');
  }

  .prose h3 {
    margin-top: 2em;
    margin-bottom: 0.75em;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .prose h4 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    font-size: 1.25rem;
    font-weight: 600;
  }

  /* Paragraphs */
  .prose p {
    margin-bottom: 1.25em;
    line-height: 1.75;
  }

  .prose p:first-of-type {
    font-size: 1.125em;
    line-height: 1.75;
    color: theme('colors.gray.600');
  }

  /* Inline code */
  .prose code {
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    background-color: theme('colors.gray.100');
    font-size: 0.875em;
    font-weight: 500;
  }

  /* Code blocks */
  .prose pre {
    margin-top: 1.5em;
    margin-bottom: 1.5em;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    background-color: theme('colors.gray.900');
    border: 1px solid theme('colors.gray.800');
  }

  .prose pre code {
    padding: 0;
    background-color: transparent;
    color: inherit;
    font-size: 0.875em;
  }

  /* Links */
  .prose a {
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: 500;
  }

  /* Blockquotes */
  .prose blockquote {
    margin-top: 1.6em;
    margin-bottom: 1.6em;
    padding-left: 1em;
    border-left-width: 0.25rem;
    border-left-color: theme('colors.primary.300');
    font-style: italic;
    color: theme('colors.gray.600');
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  /* Tables */
  .prose table {
    margin-top: 2em;
    margin-bottom: 2em;
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    overflow: hidden;
    border-radius: 0.5rem;
    border: 1px solid theme('colors.gray.200');
  }

  .prose thead {
    background-color: theme('colors.gray.50');
  }

  .prose th {
    padding: 0.75rem 1rem;
    font-weight: 600;
    text-align: left;
    border-bottom: 1px solid theme('colors.gray.200');
  }

  .prose td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid theme('colors.gray.200');
  }

  .prose tbody tr:last-child td {
    border-bottom: none;
  }

  /* Images */
  .prose img {
    margin-top: 2em;
    margin-bottom: 2em;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -2px rgb(0 0 0 / 0.05);
  }

  /* Horizontal rule */
  .prose hr {
    margin-top: 3em;
    margin-bottom: 3em;
    border: none;
    border-top: 2px solid theme('colors.gray.200');
  }

  /* Syntax highlighting overrides */
  .prose pre code.hljs {
    background: transparent;
    padding: 0;
  }
</style>
