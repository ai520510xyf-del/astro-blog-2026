---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Fragment } from 'astro/jsx-runtime';

const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate || a.data.date);
  const dateB = new Date(b.data.pubDate || b.data.date);
  return dateB.getTime() - dateA.getTime();
});

// Get all unique tags
const allTags = new Set<string>();
allPosts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach((tag: string) => allTags.add(tag));
  }
});
const tags = Array.from(allTags).sort();

// Filter by tag if specified
const selectedTag = Astro.url.searchParams.get('tag');
const filteredPosts = selectedTag
  ? sortedPosts.filter(post => post.data.tags?.includes(selectedTag))
  : sortedPosts;

// Pagination
const POSTS_PER_PAGE = 6;
const currentPage = parseInt(Astro.url.searchParams.get('page') || '1');
const totalPages = Math.ceil(filteredPosts.length / POSTS_PER_PAGE);
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const currentPosts = filteredPosts.slice(startIndex, endIndex);

function getPageUrl(page: number) {
  const params = new URLSearchParams();
  if (selectedTag) params.set('tag', selectedTag);
  if (page > 1) params.set('page', page.toString());
  const queryString = params.toString();
  return queryString ? `?${queryString}` : '/';
}
---

<Layout title="Blog" description="All blog posts">
  <div class="bg-gradient-to-b from-primary-50 to-white py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-4xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-4">
          Blog
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Thoughts, tutorials, and insights about web development and more.
        </p>

        <!-- Tag Filter -->
        <div class="flex flex-wrap justify-center gap-2">
          <a
            href={`/blog/${selectedTag ? '' : ''}`}
            class={`rounded-full px-4 py-2 text-sm font-medium transition-colors ${
              !selectedTag
                ? 'bg-primary-600 text-white'
                : 'border border-gray-300 text-gray-700 hover:bg-gray-50'
            }`}
          >
            All Posts
          </a>
          {tags.map((tag) => (
            <a
              href={`/blog/?tag=${encodeURIComponent(tag)}`}
              class={`rounded-full px-4 py-2 text-sm font-medium transition-colors ${
                selectedTag === tag
                  ? 'bg-primary-600 text-white'
                  : 'border border-gray-300 text-gray-700 hover:bg-gray-50'
              }`}
            >
              #{tag}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-5xl">
        {currentPosts.length > 0 ? (
          <div>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
              {currentPosts.map((post) => (
                <article class="group flex flex-col bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                  <div class="flex-1 p-6">
                    <div class="flex items-center gap-x-2 text-xs text-gray-500 mb-3">
                      <time datetime={post.data.pubDate || post.data.date}>
                        {new Date(post.data.pubDate || post.data.date).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                      {post.data.readingTime && (
                        <Fragment>
                          <span>·</span>
                          <span>{post.data.readingTime} min read</span>
                        </Fragment>
                      )}
                    </div>

                    <a href={`/blog/${post.slug}`} class="block w-full">
                      <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600 transition-colors mb-2 line-clamp-2">
                        {post.data.title}
                      </h3>
                      {post.data.description && (
                        <p class="text-sm text-gray-600 line-clamp-3">
                          {post.data.description}
                        </p>
                      )}
                    </a>

                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="mt-4 flex flex-wrap gap-2">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <a
                            href={`/blog/?tag=${encodeURIComponent(tag)}`}
                            class="inline-flex items-center rounded-full bg-primary-50 px-2 py-1 text-xs font-medium text-primary-700 hover:bg-primary-100 transition-colors"
                          >
                            {tag}
                          </a>
                        ))}
                      </div>
                    )}
                  </div>

                  <div class="px-6 pb-6">
                    <a
                      href={`/blog/${post.slug}`}
                      class="text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors inline-flex items-center gap-1"
                    >
                      Read more
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </article>
              ))}
            </div>

            <!-- Pagination -->
            {totalPages > 1 && (
              <nav class="mt-12 flex justify-center items-center gap-2" aria-label="Pagination">
                {currentPage > 1 && (
                  <a
                    href={getPageUrl(currentPage - 1)}
                    class="rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                  >
                    Previous
                  </a>
                )}

                <div class="flex items-center gap-2">
                  {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => {
                    const isActive = page === currentPage;
                    const showPage = page === 1 || page === totalPages || Math.abs(page - currentPage) <= 1;

                    if (!showPage) {
                      if (page === 2 || page === totalPages - 1) {
                        return <span class="px-2 text-gray-400">...</span>;
                      }
                      return null;
                    }

                    return (
                      <a
                        href={getPageUrl(page)}
                        class={`rounded-md px-4 py-2 text-sm font-medium transition-colors ${
                          isActive
                            ? 'bg-primary-600 text-white'
                            : 'border border-gray-300 text-gray-700 hover:bg-gray-50'
                        }`}
                        aria-current={isActive ? 'page' : undefined}
                      >
                        {page}
                      </a>
                    );
                  })}
                </div>

                {currentPage < totalPages && (
                  <a
                    href={getPageUrl(currentPage + 1)}
                    class="rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                  >
                    Next
                  </a>
                )}
              </nav>
            )}
          </div>
        ) : (
          <div class="text-center py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-6">
              <svg class="w-10 h-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">No posts found</h2>
            <p class="text-lg text-gray-600">
              {selectedTag
                ? `No posts tagged with "${selectedTag}"`
                : 'No posts yet. Check back soon!'
              }
            </p>
            {selectedTag && (
              <a href="/blog/" class="inline-block mt-4 text-primary-600 hover:text-primary-700 font-medium">
                View all posts →
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>
