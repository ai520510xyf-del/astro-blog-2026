---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home" description="Welcome to my Astro 5 blog">
  <section class="relative overflow-hidden bg-gradient-to-b from-primary-50 to-white py-20 sm:py-32">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          Welcome to My Blog
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          A modern static blog built with <span class="font-semibold text-primary-600">Astro 5</span> and Tailwind CSS.
          Fast, responsive, and easy to customize.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/blog"
            class="rounded-md bg-primary-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 transition-colors"
          >
            Read Blog
          </a>
          <a
            href="/about"
            class="text-base font-semibold leading-6 text-gray-900 hover:text-primary-600 transition-colors"
          >
            Learn more <span aria-hidden="true">â†’</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
